<!DOCTYPE html>
<html lang="fa" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>فرم پذیرش بیمار</title>
    <link rel="stylesheet" href="../assets/css/style.css" />
  </head>
  <body>
    <div class="container">
      <!-- هدر بالا -->
      <section class="top-bar">
        <div class="field">
          <label>کد بیمار</label>
          <input type="text" />
        </div>

        <div class="field">
          <label>شماره پرونده</label>
          <input type="text" />
        </div>

        <div class="field">
          <label>نوع پرونده</label>
          <input type="text" />
        </div>

        <div class="field">
          <label>شماره کارت</label>
          <input type="text" />
        </div>
      </section>

      <!-- بدنه اصلی -->
      <section class="main-grid">
        <!-- ستون راست -->
        <div class="card">
          <h3>اطلاعات کلی بیمار</h3>

          <form action="/save-patient" method="POST">
            <div class="form-group">
              <label>نام</label>
              <input type="text" name="first_name" required />
            </div>

            <div class="form-group">
              <label>نام خانوادگی</label>
              <input type="text" name="last_name" required />
            </div>

            <div class="form-group">
              <label>نام پدر</label>
              <input type="text" name="father_name" />
            </div>

            <div class="form-group">
              <label>کد ملی</label>
              <input type="text" name="national_id" />
            </div>

            <div class="form-group">
              <label>تاریخ تولد</label>
              <input type="date" name="birth_date" />
            </div>

            <div class="form-group">
              <label>جنسیت</label>
              <select name="gender">
                <option value="مرد">مرد</option>
                <option value="زن">زن</option>
              </select>
            </div>

            <button type="submit" class="primary-btn">F3 ثبت بیمار جدید</button>
          </form>
        </div>

        <!-- ستون وسط -->
        <div class="card large">
          <h3>سوابق</h3>
          <textarea rows="10"></textarea>
        </div>

        <!-- ستون چپ -->
        <div class="card">
          <h3>مشخصات پذیرش</h3>

          <div class="form-group">
            <label>نوع پذیرش</label>
            <select>
              <option>عادی</option>
              <option>اورژانسی</option>
            </select>
          </div>

          <div class="form-group">
            <label>پزشک معالج</label>
            <input type="text" />
          </div>

          <div class="form-group">
            <label>کد ملی</label>
            <input type="text" />
          </div>

          <div class="form-group">
            <label>کد اتباع</label>
            <input type="text" />
          </div>

          <button class="secondary-btn">F2 استحقاق سنجی</button>
        </div>
      </section>
    </div>
  </body>
</html>
